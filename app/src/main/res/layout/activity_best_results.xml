<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BestResults"
    android:background="@drawable/background"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    >

    <ImageView
        android:id="@+id/main_step_r"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/footprint" />
    <ImageView
        android:id="@+id/main_step_l"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/footprint" />

    <TextView
        android:id="@+id/naslovRez"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Best results:"
        android:textSize="38dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rezultati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naslovRez"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingTop="30dp"
        android:paddingRight="120dp"
        android:paddingBottom="180dp"
        android:text="Rezultati"
        android:textColor="@android:color/white"
        android:textSize="40dp" />

</RelativeLayout>